{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "types/*": ["src/@types/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@implementations/*": ["./src/implementations/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
