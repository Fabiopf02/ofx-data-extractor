{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es5", "ESNext"],
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
